<?xml version="1.0" encoding="utf-8"?>
<phpunit
    backupGlobals="false"
    stopOnFailure="false"
    colors="true"
    bootstrap="./Runner.php">

    <testsuites>
      <testsuite name="All">
        <directory>./Tests/</directory>
      </testsuite>
    </testsuites>
    
    <filter>
        <whitelist>
            <directory suffix=".php">./../src/</directory>
            <exclude>
                <directory>./../vendor/</directory>
            </exclude>
        </whitelist>
    </filter>   
</phpunit>
